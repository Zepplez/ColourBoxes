<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="zepplez.com.colourbox.gameActivity"
                style="@style/EndScreenBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time's Up!"
        android:id="@+id/EndTitle"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:textColor="#ff90f1ff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/finalScoreTextView"
        android:layout_toRightOf="@+id/scoreTextView"
        android:layout_alignBottom="@+id/scoreTextView"
        android:textStyle="bold"
        android:textSize="35sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:id="@+id/scoreTextView"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/EndTitle"
        android:layout_marginTop = "10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score:"
        android:id="@+id/highScoreTextView"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_below="@+id/scoreTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/highScore"
        android:layout_alignTop="@+id/highScoreTextView"
        android:layout_toRightOf="@+id/highScoreTextView"
        android:layout_toEndOf="@+id/highScoreTextView"
        android:layout_alignBottom="@+id/highScoreTextView"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again!"
        android:id="@+id/retryButton"
        android:layout_below="@+id/highScoreTextView"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>